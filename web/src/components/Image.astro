---
import { urlFor } from "lib/utils"
import { Image } from "lib/interfaces"
interface Props {
  caption?: string
  className?: string
  image: Image
  width: number
  height?: number
  lazy?: boolean
}
const {
  caption,
  className,
  image,
  width,
  height,
  lazy
} = Astro.props as Props
const hotspot = image.hotspot
const position = hotspot
  ? `${Math.round(hotspot.x * 100)}% ${Math.round(hotspot.y * 100)}%`
  : "50% 50%"
---
<img
  src={urlFor(image)
    .auto("format")
    .width(width)
    .height(height)
    .quality(85)
    .url()}
  alt={caption}
  width={width}
  height={height}
  loading={lazy ? "lazy" : "eager"}
  style={`object-position: ${position}`}
  class={className}
/>

<style>
img {
  object-fit: cover;
  width: 100vw;
}
</style>
