{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/layouts/*": ["layouts/*"],
      "@/lib/*": ["lib/*"],
      "@/generated/*": ["generated/*"],
      "@/pages/*": ["pages/*"],
      "@/styles/*": ["styles/*"]
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.svelte",
    "src/**/*.astro"
  ]
}
